<div class="container">
  <h1>Se connecter pour laisser un commentaire</h1>

  <%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
    <div class="form-size">
      <div class="field">
        <%= form.label :email %>
        <%= form.email_field :email,  class: "form_field form-control", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password ,  class: "form_field form-control", placeholder: "Password"%>
      </div>
      <p>
        <%= form.submit 'Login', class: "btn btn-primary enregistrer" %>
      </p>
    </div>
  <% end %>

</div>
