
<div class="after_nav">
  <p class="look_hospital">Are you looking for a pharmacy?</p>
  <p class="place">You are at the rigth place</p>

  <div class="search-block">
    <%= form_with(scope: :pharmacy, url: pharmacies_path, method: :get, local: true ) do |form|%>
	  <%= form.label :name, class: 'col-md-1 wite-color' %>
	  <%= form.text_field :name, class: 'col-md-1',style: "padding: 7px; width: 300px;", placeholder: 'search...' %>
	  <%= form.collection_select(:town_id, Area.all, :id, :town, class:"col-md-1", style:"width: 300px;", prompt: 'select town') %>
    <%= form.collection_select(:area_id, Area.all, :id, :name, class:"col-md-1", style:"width: 300px;", prompt: 'select area') %>
    <%= form.submit 'Search', class: 'btn btn-default'%>

 <% end %>
  </div>
  <div class="table-container">
    <table class="list-table table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Area</th>
          <th>All nigth</th>
          <th>Googlemap link</th>
          <th>Number1</th>
          <th>Number2</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

        <% @pharmacies.each do |pharmacy| %>
          <tr>
          <td><%= pharmacy.name %></td>
          <td><%= pharmacy.area.name %></td>
          <td><%= pharmacy.all_nigth %></td>
          <td><%= pharmacy.googlemap_link %></td>
          <td><%= pharmacy.number1 %></td>
          <td><%= pharmacy.number2 %></td>
          <td><%= link_to 'Details', pharmacy %></td>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="comments">
    <p>List of comments (the contents below from here are important)</p>
    <!-- Get the HTML id of this comments_area and update only that part of the div-->
    <div id="comments_area">
      <!-- Render to display a list of posted comments on the blog details page -->
      <%= render partial: 'comments/index', locals: { comments: @comments } %>
    </div>
    <!-- Render to display the comment input field on the detail page of the blog -->
    <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
    <%= link_to 'Edit', edit_comment_path(@comment) %> |
    <%= link_to 'Return', pharmacies_path %>
    </div>
</div>
