<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id="this_comment_<%= comment.id%>"> </div>
        <p><%= comment.content %></p>
        <p><%= link_to "Edit comment", edit_comment_path(comment), remote: true%></p>
        <p><%= link_to "Delete comment", comment_path(comment), method: :delete, remote: true,
            data: {confirm: "Do you really want to delete it?"}
          %></p>
      </li>
    <% end %>
  <% end %>
</ul>
