<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id="this_comment_<%= comment.id%>"> </div>
        <p><%= comment.content %></p>
        <p><%= link_to "Modifier le commentaire", edit_comment_path(comment), remote: true%></p>
        <p><%= link_to "Supprimer le commentaire", comment_path(comment), method: :delete, remote: true,
            data: {confirm: "Vous voulez vraiment supprimer cela?"}
          %></p>
      </li>
    <% end %>
  <% end %>
</ul>
